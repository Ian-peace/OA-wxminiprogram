/* page/four/index.wxss */

.page {
  font-size: 40rpx;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}

.sideslip {
  height: 100%;
  width: 750rpx;
  position: fixed;
  background-color: #666;
  z-index: 0;
}

.logo image {
  z-index: 10;
  width: 75%;
  height: 400rpx;
  border-right: 2px solid #666;
}

.content {
  color: #fff;
  padding: 30rpx 0 30rpx 40rpx;
}

.sideslip-top {
  height: 100%;
  position: fixed;
  width: 750rpx;
  background-color: #fff;
  z-index: 0;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}

.list-nav {
  height:80rpx;
  width: 100%;
  background: #eee;
}

.sideslip-top .list-images {
  z-index: 100;
  position: absolute;
  width: 68rpx;
  height: 38rpx;
  left: 20rpx;
  top: 20rpx;
}

.c-state1 {
  transform: rotate(0deg) scale(1) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(75%, 0%);
}

.c-state2 {
  transform: rotate(0deg) scale(0.8) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(0.8) translate(75%, 0%);
}

.item-container {
  margin: 10rpx 20rpx;
  position: relative;
}

.cover {
  width: 100%;
  height: 400rpx;
  display: block;
}

.desc {
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #e5e7ed;
}

.desc .left {
}

.desc .right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.right image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
